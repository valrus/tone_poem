#:kivy 1.1.0
#:import WINDOW_SIZE tools.WINDOW_SIZE
#:import MidiInputDispatcher keyboard.MidiInputDispatcher

<VertexWidget>:
    canvas:
        Color:
            rgba: 0, 0, 1, 1
        Ellipse:
            pos: self.pos
            size: self.size


<MapLabel>:
    on_size: self.pos = self.x - (self.width / 2), self.y - (self.height / 2)


<AreaScreen>:
    id: map_root
    midi_in: app.midi_in
    anchor_x: 'center'
    anchor_y: 'center'
    size_hint: 1.0, 1.0

    canvas.before:
        Rectangle:
            pos: 0, 0
            size: root.size
            texture: map_root.renderer.ground_texture
             

<MapWrapper>:
    anchor_x: 'center'
    anchor_y: 'center'
    pos: self.center_coords.x - self.width / 2, self.center_coords.y - self.height / 2
    center: self.center_coords


<MapTile>:
    color: (0, 0, 0, 1)
    size_hint: None, None
    size: tuple(WINDOW_SIZE)
    canvas:
        Color:
            rgba: self.shade_color
        Mesh:
            vertices: self.mesh_verts
            indices: self.mesh_indices
            mode: 'triangles'


<MapOverlay>:
    size_hint: None, None
    size: tuple(WINDOW_SIZE)
    pos: 0, 0
    opacity: 1.0


<CreatureWidget>:
    happy_label: happiness
    on_size: self.pos = self.x - (self.width / 2), self.y - (self.height / 2)

    Image:
        id: sprite
        source: root.image_source
        size_hint: None, None
        size: self.parent.size
        center: self.parent.center

        Label:
            id: happiness
            font_name: 'fonts/DejaVuSans.ttf'
            text: ''
            halign: 'center'
            valign: 'bottom'
            center: self.parent.center
            text_size: self.parent.size


<EncounterScreen>:
    kb: keyboard
    
    BoxLayout:
        id: battle_root
        orientation: 'vertical'
        size_hint: 1.0, 1.0
        padding: 10
        spacing: 10

        BoxLayout:
            id: battle_area
            size_hint: 1.0, 0.6

            BoxLayout:
                id: beastie_area
                orientation: 'vertical'
                size_hint: 0.7, 1.0

            BoxLayout:
                id: player_area
                orientation: 'vertical'
                size_hint: 0.3, 1.0

        AnchorLayout:
            id: keyboard_area
            size_hint: 1.0, 0.1

            MidiKeyboard:
                id: keyboard
                size_hint: 1.0, 1.0

        BoxLayout:
            id: info_area
            midi_in: app.midi_in
            size_hint: 1.0, 0.3


<MidiScreen>:
    id: midi_screen
    kb: keyboard
    
    BoxLayout:
        id: midi_root
        orientation: 'vertical'
        size_hint: 1.0, 1.0
        padding: 10
        spacing: 10

        BoxLayout:
            id: settings_root
            orientation: 'horizontal'
            size_hint: 1.0, 1.0
            padding: 10
            spacing: 10

            AnchorLayout:
                id: midi_list_layout
                anchor_x: 'center'
                anchor_y: 'center'

            AnchorLayout:
                id: save_button_layout
                anchor_x: 'center'
                anchor_y: 'center'

                Button:
                    text: 'Save settings'
                    padding: 10, 10
                    size_hint: None, None
                    size: self.texture_size
                    on_press: root.save()

        AnchorLayout:
            id: keyboard_area

            MidiKeyboard:
                id: keyboard
                midi_in: app.midi_in
                size_hint: 0.9, 0.9


#:set white_key_w 1.0 / 7.0
<WhiteKey>:
    size_hint: (white_key_w, 1)
    canvas:
        Color:
            rgb: (0.7, 1, 0.7) if self.pressed else (0.8, 0.8, 0.8)

        Rectangle:
            pos: self.pos
            size: self.size

        Color:
            rgb: (0.7, 1, 0.7) if self.pressed else self.rgb

        Rectangle:
            pos: self.x + 1, self.y + 1
            size: self.width - 2, self.height - 2


#:set black_key_w 1.0 / 10.0
<BlackKey>:
    size_hint: (black_key_w, 0.6)
    canvas:
        Color:
            rgb: (0.3, 0.5, 0.3) if self.pressed else (0, 0, 0)

        Rectangle:
            pos: self.pos
            size: self.size

        Color:
            rgb: (0.3, 0.5, 0.3) if self.pressed else self.rgb

        Rectangle:
            pos: self.x + 1, self.y + 1
            size: self.width - 2, self.height - 2


<MidiKeyboard>:
    midi_in: app.midi_in
    
    WhiteKey:
        id: C
        index: 0
        pos_hint: {'x': white_key_w * 0}
    WhiteKey:
        id: D
        index: 2
        pos_hint: {'x': white_key_w * 1}
    WhiteKey:
        id: E
        index: 4
        pos_hint: {'x': white_key_w * 2}
    WhiteKey:
        id: F
        index: 5
        pos_hint: {'x': white_key_w * 3}
    WhiteKey:
        id: G
        index: 7
        pos_hint: {'x': white_key_w * 4}
    WhiteKey:
        id: A
        index: 9
        pos_hint: {'x': white_key_w * 5}
    WhiteKey:
        id: B
        index: 11
        pos_hint: {'x': white_key_w * 6}
    BlackKey:
        id: Db
        index: 1
        pos_hint: {'x': (white_key_w * 1) - (black_key_w / 2.0), 'top': 1}
    BlackKey:
        id: Eb
        index: 3
        pos_hint: {'x': (white_key_w * 2) - (black_key_w / 2.0), 'top': 1}
    BlackKey:
        id: Gb
        index: 6
        pos_hint: {'x': (white_key_w * 4) - (black_key_w / 2.0), 'top': 1}
    BlackKey:
        id: Ab
        index: 8
        pos_hint: {'x': (white_key_w * 5) - (black_key_w / 2.0), 'top': 1}
    BlackKey:
        id: Bb
        index: 10
        pos_hint: {'x': (white_key_w * 6) - (black_key_w / 2.0), 'top': 1}
