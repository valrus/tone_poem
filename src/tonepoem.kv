#:kivy 1.1.0

<StackLayout>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<WhiteKey>:
    canvas:
        Color:
            rgb: (0.8, 1, 0.8) if self.pressed else (0.8, 0.8, 0.8)

        Rectangle:
            pos: self.pos
            size: self.size

        Color:
            rgb: (0.8, 1, 0.8) if self.pressed else (1, 1, 1)

        Rectangle:
            pos: self.x + 1, self.y + 1
            size: self.width - 2, self.height - 2


<BlackKey>:
    canvas:
        Color:
            rgb: (0.8, 1, 0.8) if self.pressed else (0, 0, 0)

        Rectangle:
            pos: self.pos
            size: self.size

    canvas:
        Color:
            rgb: (0.8, 1, 0.8) if self.pressed else (0.2, 0.2, 0.2)

        Rectangle:
            pos: self.x + 1, self.y + 1
            size: self.width - 2, self.height - 2

<Keyboard>:
    keybox: box

    RelativeLayout:
        id: box
